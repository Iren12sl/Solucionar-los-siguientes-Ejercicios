package Ejercicios.sisl.com;

import java.util.Scanner;

public class CÃ¡lculoHipotenusa {

	  public static void main(String[] args) {
	        Scanner scanner = new Scanner(System.in);
	        System.out.println("Ingrese el valor del primer cateto");
	        double catetoUno = scanner.nextDouble();
	        System.out.println("Ingrese el valor del segundo cateto");
	        double catetoDos = scanner.nextDouble();
	        scanner.close();
	        double hipotenusa = Math.sqrt(Math.pow(catetoUno, 2) + Math.pow(catetoDos, 2));
	        System.out.println("La hipotenusa calculada es " + hipotenusa);
	  }
}
